<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Blazor Finance</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi bi-calculator" aria-hidden="true"></span> Summary
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="positions">
                <span class="oi bi-receipt" aria-hidden="true"></span> Positions
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="allocation">
                <span class="oi bi-pie-chart" aria-hidden="true"></span> Allocation
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="projection">
                <span class="oi bi-graph-up-arrow" aria-hidden="true"></span> Projections
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="ToggleAdminNavMenu">
                <span class=@(collapseAdminSubNav ? "nav-item oi bi-caret-down" : "nav-item oi bi-caret-up") aria-hidden="true"></span> Admin
            </NavLink>
        </div>
        @if (!collapseAdminSubNav)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="institutions">
                    <span class="oi bi-bank" aria-hidden="true"></span> Institutions
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="accounts">
                    <span class="oi bi-credit-card-2-front" aria-hidden="true"></span> Accounts
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="assets">
                    <span class="oi bi-clipboard-check" aria-hidden="true"></span> Assets
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="incomes">
                    <span class="oi bi-cash-coin" aria-hidden="true"></span> Incomes
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="expenses">
                    <span class="oi bi-cloud-rain" aria-hidden="true"></span> Expenses
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool collapseAdminSubNav = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleAdminNavMenu()
    {
        collapseAdminSubNav = !collapseAdminSubNav;
    }
}
