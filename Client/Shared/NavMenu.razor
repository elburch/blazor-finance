<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorFinance</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch Data
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="portfolio">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Portfolio Summary
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="ToggleAdminNavMenu">
                <span class=@(collapseAdminSubNav ? "nav-item oi oi-caret-bottom" : "nav-item oi oi-caret-top") aria-hidden="true"></span> Admin
            </NavLink>
        </div>
        @if (!collapseAdminSubNav)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="institutions">
                    <span class="oi oi-basket" aria-hidden="true"></span> Institutions
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="accounts">
                    <span class="oi oi-pencil" aria-hidden="true"></span> Accounts
                </NavLink>
            </div>
            
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool collapseAdminSubNav = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleAdminNavMenu()
    {
        collapseAdminSubNav = !collapseAdminSubNav;
    }
}
